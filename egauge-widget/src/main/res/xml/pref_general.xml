<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <CheckBoxPreference
        android:key="enable_sync_checkbox"
        android:title="@string/pref_title_enable_sync"
        android:summary="@string/pref_desc_enable_sync"
        android:defaultValue="true" />

    <EditTextPreference
        android:key="monitor_name_text"
        android:title="@string/pref_title_mon_name"
        android:defaultValue="@string/pref_default_mon_name"
        android:selectAllOnFocus="true"
        android:inputType="textCapWords"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />

    <EditTextPreference
        android:key="proxy_server_text"
        android:title="@string/pref_title_proxy_server"
        android:defaultValue="@string/pref_default_proxy_server"
        android:selectAllOnFocus="true"
        android:inputType="textCapWords"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />

    <EditTextPreference
        android:key="grid_register_text"
        android:title="@string/pref_title_grid_register"
        android:defaultValue="@string/pref_default_grid_register"
        android:selectAllOnFocus="true"
        android:inputType="textCapWords"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />

    <EditTextPreference
        android:key="solar_register_text"
        android:title="@string/pref_title_solar_register"
        android:defaultValue="@string/pref_default_solar_register"
        android:selectAllOnFocus="true"
        android:inputType="textCapWords"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />

    <ListPreference
        android:key="sync_frequency_list"
        android:title="@string/pref_title_sync_frequency"
        android:defaultValue="300"
        android:entries="@array/pref_sync_frequency_labels"
        android:entryValues="@array/pref_title_sync_frequency_values"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null" />

    <ListPreference
        android:key="display_option_list"
        android:title="@string/pref_title_display_option"
        android:defaultValue="net_usage"
        android:entries="@array/pref_title_display_labels"
        android:entryValues="@array/pref_title_display_option_values"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null" />

    <CheckBoxPreference
        android:key="show_time_checkbox"
        android:title="@string/pref_title_show_time"
        android:summary="@string/pref_desc_show_time"
        android:defaultValue="true" />

    <CheckBoxPreference
        android:key="show_settings_checkbox"
        android:title="@string/pref_title_show_settings"
        android:summary="@string/pref_desc_show_settings"
        android:defaultValue="true" />

    <CheckBoxPreference
        android:key="show_refresh_checkbox"
        android:title="@string/pref_title_show_refresh"
        android:summary="@string/pref_desc_show_refresh"
        android:defaultValue="true" />

</PreferenceScreen>
